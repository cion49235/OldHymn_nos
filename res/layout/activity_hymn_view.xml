<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">
    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1">
		<LinearLayout
			 android:id="@+id/layout_img_biblesong"    
		     android:orientation="vertical" 
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     android:visibility="visible">
		    <ImageView 
		        android:id="@+id/img_hymn"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"/>
		</LinearLayout>
		<LinearLayout
	        android:id="@+id/layout_nodata"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center"
			android:visibility="gone">
	        <TextView
	            android:id="@+id/txt_nodata"
	            android:text="@string/txt_song_nodata"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#000000"
		        android:textSize="13sp"/>
         </LinearLayout>
		<LinearLayout
	     		android:id="@+id/layout_progress" 
                android:visibility="gone" 
                android:orientation="vertical"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_centerInParent="true" 
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
          <ProgressBar
                android:layout_gravity="center" 
                android:id="@android:id/progress"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                style="?android:progressBarStyle" />
     </LinearLayout>              
	</RelativeLayout>
    
    <RelativeLayout 
          android:id="@+id/hymn_control_panel_layout"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" 
          android:layout_gravity="center_horizontal"
          android:background="@color/bg_btn_layer" >
	      <LinearLayout
             android:orientation="vertical" 
             android:layout_width="fill_parent" 
             android:layout_height="wrap_content">
            <LinearLayout 
                android:gravity="center" 
                android:orientation="horizontal" 
                android:id="@+id/control_btn_layout"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:layout_marginTop="0.0dip">
                <TextView
                     android:gravity="center"
	                 android:textColor="#000000"
	                 android:textStyle="bold"
	                 android:ellipsize="marquee" 
	                 android:layout_gravity="center"
	                 android:id="@+id/txt_hymn_title"
	                 android:layout_width="0dip" 
	                 android:layout_height="wrap_content"
	                 android:layout_weight="1.0" 
	                 android:marqueeRepeatLimit="marquee_forever"
	                 android:singleLine="true"
	                 android:text="@string/txt_hymn_ready" />
                <TextView 
                    android:layout_gravity="center" 
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="00:00:00" />
                <ImageButton
                     android:id="@+id/bt_pause"
                     style="@style/MediaButton.Play" />
                <ImageView
                     android:layout_marginRight="10dp"
                     android:id="@+id/bt_hymn_continue"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/btn_general_selector"
                     android:src="@drawable/ic_action_repeat_cancel"/>
                <ImageView
                     android:layout_marginRight="5dp"
                     android:id="@+id/bt_hymn_background"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/btn_general_selector"
                     android:src="@drawable/btn_bg_ic_background"/>
            </LinearLayout>
        </LinearLayout>			 
    </RelativeLayout>
    
	<RelativeLayout
          android:id="@+id/ad_layout"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" 
          android:layout_gravity="center_horizontal"> 
    </RelativeLayout>
    
	<RelativeLayout
	      android:visibility="gone" 
	      android:id="@+id/admob_native"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:layout_alignBottom="@+id/webview"
	      android:layout_gravity="center_horizontal"
	      android:gravity="center"> 
	</RelativeLayout>
	
</LinearLayout>